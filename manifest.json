{
    "manifest_version": 3,
    "name": "Open Links in New Tab",
    "version": "1.2",
    "description": "Automatically open any clicked link in a new tab.",
    "permissions": ["tabs"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_title": "Open Links in New Tab"
    }
  }
  